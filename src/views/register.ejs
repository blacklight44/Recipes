<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Kullanıcı Oluşturun</h1>
          </div>
          <!-- name alanlarına göre verileri alacağız name="ad" deyince ad: 'yakup'" taki key değer ad ı temsil eder-->
          <!-- submit butonuna tıklandığında yapılacak işlem action="/register" method="post"  -->
          <!-- router.post('/register', ....) a bir reğuest atar  -->
          <!-- form olduğundan verilerin çözümlenmesi için  app.use(express.urlencoded({ extended: true })) -->
          <form class="user">
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <!-- daha önce doldurulmuş değerleri value olarak inputlara atıyoruz -->
                <!-- ad,soyad vb bilgileri reg post ta locals a eklediğimizden direk alabiliyoruz  -->
                <input
                  type="text"
                  class="form-control form-control-user"
                  id="exampleFirstName"
                  placeholder="Adınız"
                />
              </div>
              <div class="col-sm-6">
                <input
                  type="text"
                  class="form-control form-control-user"
                  id="exampleLastName"
                  placeholder="Soyadınız"
                />
              </div>
            </div>
            <div class="form-group">
              <input
                type="email"
                class="form-control form-control-user"
                id="exampleInputEmail"
                placeholder="Emailiniz"
              />
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <input
                  type="password"
                  class="form-control form-control-user"
                  id="exampleInputPassword"
                  placeholder="Şifreniz"
                />
              </div>
              <div class="col-sm-6">
                <input
                  type="password"
                  class="form-control form-control-user"
                  id="exampleRepeatPassword"
                  placeholder="Şifrenizi Tekrar Yazın"
                />
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
              Kullanıcı Oluştur
            </button>
            <hr />
            <a href="index.html" class="btn btn-google btn-user btn-block">
              <i class="fab fa-google fa-fw"></i> Register with Google
            </a>
            <a href="index.html" class="btn btn-facebook btn-user btn-block">
              <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
            </a>
          </form>
          <hr />
          <div class="text-center">
            <a class="small" href="/forget-password">Şifremi Unuttum?</a>
          </div>
          <div class="text-center">
            <a class="small" href="/login">Hesabınız var mı? Giriş yapın</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
